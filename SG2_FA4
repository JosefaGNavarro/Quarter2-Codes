# Function to compute the average score for each student
def compute_student_average(scores):
    return sum(scores) / len(scores)

# Function to compute the overall class average
def compute_class_average(total_score, num_students, num_subjects):
    return total_score / (num_students * num_subjects)


    # Input the number of students and subjects
num_students = int(input("Enter the number of students: "))
num_subjects = int(input("Enter the number of subjects per student: "))
    
total_score = 0  # Variable to keep track of total score for class average

for i in range(1, num_students + 1):
    print(f"\nEnter scores for Student {i}:")
    student_scores = []
        
    for j in range(1, num_subjects + 1):
        score = float(input(f"Enter score for Subject {j}: "))
        student_scores.append(score)
        
    
    student_average = compute_student_average(student_scores)
    total_score += sum(student_scores)  # Add to the total score for class average
        
    print(f"Student {i}'s average score: {student_average:.2f}")
    
class_average = compute_class_average(total_score, num_students, num_subjects)
    
print(f"\nOverall class average score: {class_average:.2f}")